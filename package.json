{
  "name": "ai-visibility-tracker",
  "version": "1.0.0",
  "description": "AI Visibility Tracker - Monitor brand mentions in AI search results",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon --ignore backend/data/ --ignore '*.json' backend/server.js",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "postinstall": "echo 'âœ… Installation complete! See QUICKSTART.md to get started.'"
  },
  "keywords": [
    "ai",
    "visibility",
    "tracking",
    "seo",
    "geo"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "lowdb": "^1.0.0",
    "node-cron": "^3.0.3",
    "openai": "^4.24.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
