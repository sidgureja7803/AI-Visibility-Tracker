OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=600
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000


REDIS_ENABLED=true
REDIS_HOST=127.0.0.1
